// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id           Int     @id @default(autoincrement())
  uuid         String  @unique
  token_digest String
  events       event[]
}

model event {
  id           Int        @id @default(autoincrement())
  organizer_id Int
  path         String     @unique
  name         String
  organizer    user       @relation(fields: [organizer_id], references: [id], onDelete: Cascade)
  schedules    schedule[]
  guests       guest[]
}

model schedule {
  id         Int          @id @default(autoincrement())
  event_id   Int
  datetime   DateTime
  event      event        @relation(fields: [event_id], references: [id], onDelete: Cascade)
  attendance attendance[]

  @@unique([event_id, datetime])
}

model guest {
  id           Int          @id @default(autoincrement())
  event_id     Int
  guest_number Int
  name         String
  event        event        @relation(fields: [event_id], references: [id], onDelete: Cascade)
  attendance   attendance[]

  @@unique([event_id, guest_number])
}

model attendance {
  id          Int      @id @default(autoincrement())
  guest_id    Int
  guest       guest    @relation(fields: [guest_id], references: [id], onDelete: Cascade)
  schedule_id Int
  schedule    schedule @relation(fields: [schedule_id], references: [id], onDelete: Cascade)
  enabled     Boolean

  @@unique([guest_id, schedule_id])
}
